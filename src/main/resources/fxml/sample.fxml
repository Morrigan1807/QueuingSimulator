<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="270.0" prefWidth="352.0"
            style="-fx-background-color: linear-gradient(to bottom right, lightblue, mediumorchid);"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Controller">
   <Button layoutX="91.0" layoutY="231.0" mnemonicParsing="false" onAction="#startSimulationButton" prefHeight="25.0"
           prefWidth="187.0" text="Start simulation" textFill="#440c6b">
      <font>
         <Font name="System Bold" size="12.0"/>
      </font>
   </Button>
   <Label layoutX="81.0" text="Queuing Simulator">
      <font>
         <Font size="24.0"/>
      </font>
      <textFill>
         <LinearGradient>
            <stops>
               <Stop color="BLACK"/>
               <Stop color="#790d83" offset="0.30027254414030036"/>
               <Stop color="#4e36d7" offset="0.7732353754394278"/>
               <Stop color="#86158f" offset="1.0"/>
            </stops>
         </LinearGradient>
      </textFill>
   </Label>
   <Label layoutX="40.0" layoutY="196.0" prefHeight="18.0" prefWidth="290.0"
          text="Attention! 1 hour in simulation = 1 minute in real." textFill="RED">
      <font>
         <Font name="System Bold" size="12.0"/>
      </font>
   </Label>
   <GridPane layoutX="31.0" layoutY="47.0" prefHeight="149.0" prefWidth="290.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="232.0" minWidth="10.0" prefWidth="214.0"/>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="172.0" minWidth="10.0" prefWidth="140.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <TextField fx:id="numberOfCashDecks" GridPane.columnIndex="1">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </TextField>
      <TextField fx:id="queueLimit" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </TextField>
      <TextField fx:id="customerIntensity" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </TextField>
      <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             minHeight="-Infinity" minWidth="-Infinity" text="Customer intensity, per min:" textAlignment="RIGHT"
             GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             minHeight="-Infinity" minWidth="-Infinity" text="Number of cash desks:" textAlignment="RIGHT">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             minHeight="-Infinity" minWidth="-Infinity" text="Queue Limit:" textAlignment="RIGHT"
             GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             minHeight="-Infinity" minWidth="-Infinity" text="Average customer service time:" textAlignment="RIGHT"
             GridPane.rowIndex="3">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </Label>
      <TextField fx:id="averageCustomerServiceTime" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </TextField>
      <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
             minHeight="-Infinity" minWidth="-Infinity" text="Simulation Run Time, h:" textAlignment="RIGHT"
             GridPane.rowIndex="4">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </Label>
      <TextField fx:id="simulationRunTime" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <font>
            <Font name="System Bold" size="12.0"/>
         </font>
      </TextField>
   </GridPane>
</AnchorPane>
